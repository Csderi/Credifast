<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Credifast.Views.ViewsAcceso.Changed_Password">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
            <Label Text="Cambiar Contraseña" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,40" />

            <Frame BackgroundColor="#EAEAEA" CornerRadius="8" Padding="10" Margin="0,0,0,20">
                <Entry Placeholder="Correo electrónico" x:Name="EmailEntry" FontSize="16" Keyboard="Email" PlaceholderColor="Black" TextColor="Black" />
            </Frame>

            <Frame BackgroundColor="#EAEAEA" CornerRadius="8" Padding="10" Margin="0,0,0,40">
                <Entry Placeholder="Nueva Contraseña" IsPassword="True" x:Name="NewPasswordEntry" FontSize="16" PlaceholderColor="Black" TextColor="Black" />
            </Frame>

            <Button Text="Cambiar Contraseña" Clicked="ChangePasswordButton_Clicked" BackgroundColor="#B4995D" TextColor="White"
                    CornerRadius="8" HeightRequest="45" FontSize="18" HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>