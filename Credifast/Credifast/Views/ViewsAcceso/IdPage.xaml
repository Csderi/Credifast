<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Credifast.Views.ViewsAcceso.IdPage">
    <ContentPage.Content>
        <StackLayout Padding="20" BackgroundColor="LightGreen">
            <Label Text="Ingrese ID" FontSize="27" HorizontalOptions="Center" Margin="0,35,0,60" TextColor="Blue" FontAttributes="Bold"/>
            <Frame HasShadow="True" HeightRequest="45" Padding="0" CornerRadius="25">
                <Entry x:Name="IdEntry" Placeholder="ID" Keyboard="Numeric" WidthRequest="300" HeightRequest="50" FontSize="15"
                          HorizontalOptions="Center" TextColor="Black" VerticalOptions="Center" HorizontalTextAlignment="Start"
                          Margin="18,0,18,1"/>
            </Frame>
            
                <Button x:Name="BtnModificar" Text="Modificar" Clicked="Btn_Modificar" HorizontalOptions="Center" WidthRequest="150" HeightRequest="50" TextColor="Black" BackgroundColor="Yellow" Margin="0,30,0,0"
                                FontSize="15" FontAttributes="Bold" CornerRadius="25"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
